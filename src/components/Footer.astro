---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { label: "Vimeo", href: "https://vimeo.com", icon: "vimeo" },
  { label: "Instagram", href: "https://instagram.com", icon: "instagram" },
  { label: "YouTube", href: "https://youtube.com", icon: "youtube" },
];
---

<footer class="border-t border-border bg-bg-secondary">
  <div class="container-narrow section-padding">
    <div class="grid md:grid-cols-3 gap-12 md:gap-8">
      <!-- Brand -->
      <div>
        <a href="/" class="text-lg font-semibold tracking-tight">
          EIICHI<span class="text-accent">.</span>
        </a>
        <p class="mt-4 text-sm text-text-secondary leading-relaxed max-w-xs">
          Cinematic storytelling through the lens. Based in Tokyo, available worldwide.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-widest text-text-muted mb-4">
          Navigation
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/#works" class="text-sm text-text-secondary hover:text-text-primary transition-colors">Works</a>
          </li>
          <li>
            <a href="/#services" class="text-sm text-text-secondary hover:text-text-primary transition-colors">Services</a>
          </li>
          <li>
            <a href="/#about" class="text-sm text-text-secondary hover:text-text-primary transition-colors">About</a>
          </li>
          <li>
            <a href="/#contact" class="text-sm text-text-secondary hover:text-text-primary transition-colors">Contact</a>
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-widest text-text-muted mb-4">
          Connect
        </h3>
        <ul class="space-y-3">
          {
            socialLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-text-secondary hover:text-accent transition-colors inline-flex items-center gap-2"
                >
                  {link.label}
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              </li>
            ))
          }
        </ul>
        <p class="mt-6 text-sm text-text-secondary">
          <a href="mailto:hello@eiichitakeuchi.com" class="hover:text-accent transition-colors">
            hello@eiichitakeuchi.com
          </a>
        </p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-text-muted">
        &copy; {currentYear} Eiichi Takeuchi. All rights reserved.
      </p>
      <p class="text-xs text-text-muted">
        Built with care & intention
      </p>
    </div>
  </div>
</footer>
